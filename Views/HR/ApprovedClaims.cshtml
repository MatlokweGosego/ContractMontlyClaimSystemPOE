@model List<ContractMontlyClaimSystemPOE.Models.Claim>
@{
    ViewData["Title"] = "Approved Claims for Payment";
}

<h1>Approved Claims - Ready for Payment</h1>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <h4>No approved claims</h4>
        <p>There are no approved claims awaiting payment processing at this time.</p>
    </div>
}
else
{
    <div class="mb-3">
        <div class="alert alert-warning">
            <strong>Total Amount to Process:</strong> R@(Model.Sum(c => c.TotalAmount).ToString("N2"))
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Module</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total Amount</th>
                <th>Approved Date</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.Lecturer?.FullNames</td>
                    <td>@claim.ModuleName</td>
                    <td>@claim.NumberOfHours</td>
                    <td>R@(claim.AmountOfRate.ToString("N2"))</td>
                    <td><strong>R@(claim.TotalAmount.ToString("N2"))</strong></td>
                    <td>@claim.CreatingDate.ToString("MMM dd, yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocuments))
                        {
                            <a href="/uploads/@claim.SupportingDocuments" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                        }
                        else
                        {
                            <span class="text-muted">No document</span>
                        }
                    </td>
                    <td>
                        <a asp-action="GenerateInvoice" asp-route-claimId="@claim.ClaimID" class="btn btn-sm btn-success">Generate Invoice</a>
                        <button class="btn btn-sm btn-info" onclick="markAsPaid(@claim.ClaimID)">Mark Paid</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <button class="btn btn-primary" onclick="processAllPayments()">Process All Payments</button>
        <button class="btn btn-outline-secondary" onclick="generatePaymentReport()">Generate Payment Report</button>
    </div>
}

@section Scripts {
    <script>
        function markAsPaid(claimId) {
            if (confirm('Mark this claim as paid? This action cannot be undone.')) {
                // Implement payment marking logic
                alert('Claim marked as paid successfully!');
            }
        }

        function processAllPayments() {
            if (confirm('Process payments for all approved claims?')) {
                // Implement bulk payment processing
                alert('All payments processed successfully!');
            }
        }

        function generatePaymentReport() {
            // Implement report generation
            alert('Payment report generated successfully!');
        }
    </script>
}