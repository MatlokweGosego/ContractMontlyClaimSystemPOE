@model ContractMontlyClaimSystemPOE.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<h1>Submit a new Monthly Claim</h1>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ModuleName" class="control-label">Module Name</label>
                        <input asp-for="ModuleName" class="form-control" />
                        <span asp-validation-for="ModuleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="FacultyName" class="control-label">Faculty Name</label>
                        <input asp-for="FacultyName" class="form-control" />
                        <span asp-validation-for="FacultyName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="NumberOfSessions" class="control-label">Number of Sessions</label>
                        <input asp-for="NumberOfSessions" class="form-control" min="1"
                               onchange="validateSessions(this.value)" />
                        <span asp-validation-for="NumberOfSessions" class="text-danger"></span>
                        <span id="sessionsError" class="text-danger" style="display:none;"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="NumberOfHours" class="control-label">Total Hours</label>
                        <input asp-for="NumberOfHours" class="form-control" min="1" max="160"
                               onchange="validateHours(this.value)" />
                        <span asp-validation-for="NumberOfHours" class="text-danger"></span>
                        <span id="hoursError" class="text-danger" style="display:none;"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="AmountOfRate" class="control-label">Hourly Rate (R)</label>
                        <input asp-for="AmountOfRate" class="form-control" min="1" step="0.01"
                               onchange="validateRate(this.value)" />
                        <span asp-validation-for="AmountOfRate" class="text-danger"></span>
                        <span id="rateError" class="text-danger" style="display:none;"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AdditionalNotes" class="control-label">Additional Notes</label>
                <textarea asp-for="AdditionalNotes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="supportingDocument" class="control-label">Supporting Document</label>
                <input type="file" id="supportingDocument" name="supportingDocument" class="form-control"
                       accept=".pdf,.docx,.xlsx" />
                <small class="form-text text-muted">
                    Allowed files: PDF, DOCX, XLSX (Max: 5MB)
                </small>
                <div id="fileName" class="mt-2 text-info"></div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg" onclick="return validateForm()">Submit Claim</button>
                <a asp-action="TrackClaim" class="btn btn-outline-secondary">View My Claims</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <h5>Claim Summary</h5>
            </div>
            <div class="card-body">
                <p><strong>Total Amount:</strong> <span id="totalAmount">R0.00</span></p>
                <p><strong>Sessions:</strong> <span id="sessionCount">0</span></p>
                <p><strong>Hours:</strong> <span id="hourCount">0</span></p>
                <p><strong>Rate:</strong> R<span id="rateDisplay">0.00</span>/hour</p>
                <p><strong>Status:</strong> <span class="badge bg-warning">Pending</span></p>
                <p class="small text-muted">Your claim will be reviewed by the Programme Coordinator first, then by the Academic Manager.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enhanced real-time calculation with validation
        function calculateTotal() {
            const hours = parseInt($('#NumberOfHours').val()) || 0;
            const rate = parseFloat($('#AmountOfRate').val()) || 0;
            const sessions = parseInt($('#NumberOfSessions').val()) || 0;
            const total = hours * rate;

            $('#totalAmount').text('R' + total.toFixed(2));
            $('#sessionCount').text(sessions);
            $('#hourCount').text(hours);
            $('#rateDisplay').text(rate.toFixed(2));

            // Auto-validation
            validateHours(hours);
            validateRate(rate);
            validateSessions(sessions);
            validateTotalAmount(total);
        }

        function validateHours(hours) {
            const errorElem = $('#hoursError');
            if (hours > 160) {
                errorElem.text('Maximum 160 hours per month allowed').show();
                return false;
            } else if (hours < 1) {
                errorElem.text('Minimum 1 hour required').show();
                return false;
            } else {
                errorElem.hide();
                return true;
            }
        }

        function validateRate(rate) {
            const errorElem = $('#rateError');
            if (rate > 1000) {
                errorElem.text('Maximum rate: R1000 per hour').show();
                return false;
            } else if (rate < 50) {
                errorElem.text('Minimum rate: R50 per hour').show();
                return false;
            } else {
                errorElem.hide();
                return true;
            }
        }

        function validateSessions(sessions) {
            const errorElem = $('#sessionsError');
            if (sessions > 50) {
                errorElem.text('Maximum 50 sessions per month allowed').show();
                return false;
            } else if (sessions < 1) {
                errorElem.text('Minimum 1 session required').show();
                return false;
            } else {
                errorElem.hide();
                return true;
            }
        }

        function validateTotalAmount(total) {
            if (total > 50000) {
                $('#totalAmount').addClass('text-danger');
                return false;
            } else {
                $('#totalAmount').removeClass('text-danger');
                return true;
            }
        }

        function validateForm() {
            const hours = parseInt($('#NumberOfHours').val()) || 0;
            const rate = parseFloat($('#AmountOfRate').val()) || 0;
            const sessions = parseInt($('#NumberOfSessions').val()) || 0;
            const moduleName = $('#ModuleName').val();
            const facultyName = $('#FacultyName').val();

            if (!validateHours(hours) || !validateRate(rate) || !validateSessions(sessions)) {
                alert('Please fix validation errors before submitting.');
                return false;
            }

            if (!moduleName || !facultyName) {
                alert('Module name and faculty name are required.');
                return false;
            }

            return true;
        }

        // Show selected file name
        $('#supportingDocument').change(function() {
            const fileName = $(this).val().split('\\').pop();
            $('#fileName').text('Selected file: ' + fileName);
        });

        // Event listeners for real-time validation
        $('#NumberOfHours, #AmountOfRate, #NumberOfSessions').on('input', calculateTotal);

        // Initial calculation
        calculateTotal();
    </script>
    }