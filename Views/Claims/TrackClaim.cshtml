@model List<ContractMontlyClaimSystemPOE.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<h1>Track My Claims</h1>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <h4>No claims found</h4>
        <p>You haven't submitted any claims yet. <a asp-action="Claim" class="alert-link">Submit your first claim</a>.</p>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Module</th>
                <th>Month</th>
                <th>Hours</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Documents</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.ModuleName</td>
                    <td>@claim.CreatingDate.ToString("MMM yyyy")</td>
                    <td>@claim.NumberOfHours</td>
                    <td>R@(claim.TotalAmount.ToString("N2"))</td>
                    <td>
                        @{
                            var badgeClass = claim.ClaimStatus switch
                            {
                                "Pending" => "bg-warning",
                                "Pre-Approved" => "bg-info",
                                "Approved" => "bg-success",
                                "Rejected" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@claim.ClaimStatus</span>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocuments))
                        {
                            <a href="/uploads/@claim.SupportingDocuments" target="_blank" class="btn btn-sm btn-outline-primary">View Document</a>
                        }
                        else
                        {
                            <span class="text-muted">No document</span>
                        }
                    </td>
                    <td>
                        @if (claim.ClaimStatus == "Pending")
                        {
                            <button class="btn btn-sm btn-outline-warning">Edit</button>
                            <button class="btn btn-sm btn-outline-danger">Cancel</button>
                        }
                        else
                        {
                            <span class="text-muted">No actions</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
