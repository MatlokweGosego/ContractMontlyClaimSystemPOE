@model List<ContractMontlyClaimSystemPOE.Models.Claim>
@{
    ViewData["Title"] = "Pre-Approve Claims";
}

<h1>Pre-Approve Claims (Programme Coordinator)</h1>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <h4>No pending claims</h4>
        <p>There are no claims awaiting pre-approval at this time.</p>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Module</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.Lecturer?.FullNames</td>
                    <td>@claim.ModuleName</td>
                    <td>@claim.NumberOfHours</td>
                    <td>R@(claim.AmountOfRate.ToString("N2"))</td>
                    <td>R@(claim.TotalAmount.ToString("N2"))</td>
                    <td>
                        <span class="badge @(claim.ClaimStatus == "Pending" ? "bg-warning" : "bg-info")">
                            @claim.ClaimStatus
                        </span>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocuments))
                        {
                            <a href="/uploads/@claim.SupportingDocuments" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                        }
                        else
                        {
                            <span class="text-muted">No document</span>
                        }
                    </td>
                    <td>
                        <form asp-action="ApproveClaim" method="post" class="d-inline">
                            <input type="hidden" name="claimId" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-sm btn-success">Pre-Approve</button>
                        </form>
                        <form asp-action="RejectClaim" method="post" class="d-inline">
                            <input type="hidden" name="claimId" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}